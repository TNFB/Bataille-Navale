<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profil"
    tools:context=".EndGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="165dp"
            android:layout_height="188dp"
            android:contentDescription="Fin de partie"
            app:srcCompat="@drawable/boat_endgame_logo" />

        <TextView
            android:id="@+id/FinDePartie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fin de partie"
            android:textColor="#F6580E"
            android:textSize="34sp" />
        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#F6580E"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/resultat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="48sp" />

        <Button
            android:id="@+id/menu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6580E"
            android:text="@string/menu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>