<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profil"
    tools:context=".player_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="3dp"
                android:layout_height="93dp"
                android:layout_weight="1"
                android:contentDescription="Retour en arriÃ¨re"
                android:scaleType="fitCenter"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="65dp"
                android:layout_height="163dp"
                android:layout_weight="1"
                android:contentDescription="Profil"
                android:src="@drawable/user" />

            <ImageButton
                android:id="@+id/saveButton"
                android:layout_width="3dp"
                android:layout_height="103dp"
                android:layout_weight="1"
                android:contentDescription="Sauvegarder"
                android:scaleType="fitCenter"
                android:src="@drawable/save" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil du joueur :"
            android:textAlignment="center"
            android:textColor="#F6580E"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:textColor="#F6580E"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="208dp"
                android:layout_height="224dp"
                android:src="@drawable/trophy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Niveau du joueur :"
                    android:textColor="#F6580E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/levelPrint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F6580E"
                    android:textSize="34sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
